<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.MainActivity"
    android:orientation="vertical">



    <xyz.yapapa.draw.ui.component.DrawingView
        android:id="@+id/main_drawing_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/colorPrimary">

        <xyz.yapapa.draw.ui.component.SquareImageView
            android:id="@+id/color1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            ads:srcCompat="@drawable/ic_fiber_manual_record_black_48dp"
            android:tint="@color/color1"
            android:padding="@dimen/button_padding"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>
        <xyz.yapapa.draw.ui.component.SquareImageView
            android:id="@+id/color2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            ads:srcCompat="@drawable/ic_fiber_manual_record_black_48dp"
            android:tint="@color/color2"
            android:padding="@dimen/button_padding"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>
        <xyz.yapapa.draw.ui.component.SquareImageView
            android:id="@+id/color3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            ads:srcCompat="@drawable/ic_fiber_manual_record_black_48dp"
            android:tint="@color/color3"
            android:padding="@dimen/button_padding"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>
        <xyz.yapapa.draw.ui.component.SquareImageView
            android:id="@+id/color4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            ads:srcCompat="@drawable/ic_fiber_manual_record_black_48dp"
            android:tint="@color/color4"
            android:padding="@dimen/button_padding"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>
        <xyz.yapapa.draw.ui.component.SquareImageView
            android:id="@+id/color5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            ads:srcCompat="@drawable/ic_fiber_manual_record_black_48dp"
            android:tint="@color/color5"
            android:padding="@dimen/button_padding"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>
        <xyz.yapapa.draw.ui.component.SquareImageView
            android:id="@+id/color6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            ads:srcCompat="@drawable/ic_fiber_manual_record_black_48dp"
            android:tint="@color/color6"
            android:padding="@dimen/button_padding"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>
        <xyz.yapapa.draw.ui.component.SquareImageView
            android:id="@+id/color7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            ads:srcCompat="@drawable/ic_fiber_manual_record_black_48dp"
            android:tint="@color/color7"
            android:padding="@dimen/button_padding"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>
        <xyz.yapapa.draw.ui.component.SquareImageView
            android:id="@+id/color8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            ads:srcCompat="@drawable/ic_fiber_manual_record_black_48dp"
            android:tint="@color/color8"
            android:padding="@dimen/button_padding"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>
        <xyz.yapapa.draw.ui.component.SquareImageView
            android:id="@+id/color9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            ads:srcCompat="@drawable/ic_fiber_manual_record_black_48dp"
            android:tint="@color/color9"
            android:padding="@dimen/button_padding"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <xyz.yapapa.draw.ui.component.SquareImageView
            android:id="@+id/color10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            ads:srcCompat="@drawable/ic_fiber_manual_record_black_48dp"
            android:tint="@color/color10"
            android:padding="@dimen/button_padding"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>





    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/colorPrimary">

        <xyz.yapapa.draw.ui.component.SquareImageView
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            ads:srcCompat="@drawable/ic_delete_white_48dp"
            android:padding="@dimen/button_padding"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <xyz.yapapa.draw.ui.component.SquareImageView
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            ads:srcCompat="@drawable/ic_share_white_48dp"
            android:scaleType="fitXY"
            android:padding="@dimen/button_padding"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <xyz.yapapa.draw.ui.component.SquareImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            ads:srcCompat="@drawable/ic_image_white_48dp"
            android:scaleType="fitXY"
            android:padding="@dimen/button_padding"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <xyz.yapapa.draw.ui.component.SquareImageView
            android:id="@+id/main_fill_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            ads:srcCompat="@drawable/ic_format_color_fill_white_48dp"
            android:padding="@dimen/button_padding"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <xyz.yapapa.draw.ui.component.SquareImageView
            android:id="@+id/main_color_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            ads:srcCompat="@drawable/ic_color_lens_white_48dp"
            android:padding="@dimen/button_padding"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <xyz.yapapa.draw.ui.component.SquareImageView
            android:id="@+id/main_stroke_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            ads:srcCompat="@drawable/ic_gesture_white_48dp"
            android:padding="@dimen/button_padding"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <xyz.yapapa.draw.ui.component.SquareImageView
            android:id="@+id/main_undo_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            ads:srcCompat="@drawable/ic_undo_white_48dp"
            android:padding="@dimen/button_padding"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>



        <xyz.yapapa.draw.ui.component.SquareImageView
            android:id="@+id/main_redo_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            ads:srcCompat="@drawable/ic_redo_white_48dp"
            android:padding="@dimen/button_padding"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>




    </LinearLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="ca-app-pub-2888343178529026/4494446197">
    </com.google.android.gms.ads.AdView>
</LinearLayout>
