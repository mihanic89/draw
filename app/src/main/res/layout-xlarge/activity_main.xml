<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.MainActivity"
    android:orientation="vertical">



    <xyz.yapapa.draw.ui.component.DrawingView
        android:id="@+id/main_drawing_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/colorPrimary">

        <xyz.yapapa.draw.ui.component.SquareImageView
            android:id="@+id/color1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            ads:srcCompat="@drawable/ic_fiber_manual_record_black_48dp"
            android:tint="#FFF"
            android:padding="@dimen/button_padding"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>
        <xyz.yapapa.draw.ui.component.SquareImageView
            android:id="@+id/color2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            ads:srcCompat="@drawable/ic_fiber_manual_record_black_48dp"
            android:tint="#000"
            android:padding="@dimen/button_padding"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>
        <xyz.yapapa.draw.ui.component.SquareImageView
            android:id="@+id/color3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            ads:srcCompat="@drawable/ic_fiber_manual_record_black_48dp"
            android:tint="#9E9E9E"
            android:padding="@dimen/button_padding"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>
        <xyz.yapapa.draw.ui.component.SquareImageView
            android:id="@+id/color4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            ads:srcCompat="@drawable/ic_fiber_manual_record_black_48dp"
            android:tint="#607D8B"
            android:padding="@dimen/button_padding"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>
        <xyz.yapapa.draw.ui.component.SquareImageView
            android:id="@+id/color5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            ads:srcCompat="@drawable/ic_fiber_manual_record_black_48dp"
            android:tint="#F44336"
            android:padding="@dimen/button_padding"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>
        <xyz.yapapa.draw.ui.component.SquareImageView
            android:id="@+id/color6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            ads:srcCompat="@drawable/ic_fiber_manual_record_black_48dp"
            android:tint="#FF4081"
            android:padding="@dimen/button_padding"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>
        <xyz.yapapa.draw.ui.component.SquareImageView
            android:id="@+id/color7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            ads:srcCompat="@drawable/ic_fiber_manual_record_black_48dp"
            android:tint="#9C27B0"
            android:padding="@dimen/button_padding"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>
        <xyz.yapapa.draw.ui.component.SquareImageView
            android:id="@+id/color8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            ads:srcCompat="@drawable/ic_fiber_manual_record_black_48dp"
            android:tint="#673AB7"
            android:padding="@dimen/button_padding"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>
        <xyz.yapapa.draw.ui.component.SquareImageView
            android:id="@+id/color9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            ads:srcCompat="@drawable/ic_fiber_manual_record_black_48dp"
            android:tint="#3F51B5"
            android:padding="@dimen/button_padding"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <xyz.yapapa.draw.ui.component.SquareImageView
            android:id="@+id/color10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            ads:srcCompat="@drawable/ic_fiber_manual_record_black_48dp"
            android:tint="#3F51B5"
            android:padding="@dimen/button_padding"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>
        <xyz.yapapa.draw.ui.component.SquareImageView
            android:id="@+id/color11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            ads:srcCompat="@drawable/ic_fiber_manual_record_black_48dp"
            android:tint="#3F51B5"
            android:padding="@dimen/button_padding"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>




    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/colorPrimary">

        <xyz.yapapa.draw.ui.component.SquareImageView
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            ads:srcCompat="@android:drawable/ic_menu_delete"
            android:padding="@dimen/button_padding"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <xyz.yapapa.draw.ui.component.SquareImageView
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            ads:srcCompat="@android:drawable/ic_menu_share"
            android:scaleType="fitXY"
            android:padding="@dimen/button_padding"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <xyz.yapapa.draw.ui.component.SquareImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            ads:srcCompat="@drawable/ic_image"
            android:scaleType="fitXY"
            android:padding="@dimen/button_padding"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <xyz.yapapa.draw.ui.component.SquareImageView
            android:id="@+id/main_fill_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            ads:srcCompat="@drawable/ic_format_color_fill_white_24dp"
            android:padding="@dimen/button_padding"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <xyz.yapapa.draw.ui.component.SquareImageView
            android:id="@+id/main_color_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/ic_palette_white_24dp"
            android:padding="@dimen/button_padding"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <xyz.yapapa.draw.ui.component.SquareImageView
            android:id="@+id/main_stroke_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/ic_gesture_white_24dp"
            android:padding="@dimen/button_padding"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <xyz.yapapa.draw.ui.component.SquareImageView
            android:id="@+id/main_undo_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/ic_undo_white_24dp"
            android:padding="@dimen/button_padding"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>



        <xyz.yapapa.draw.ui.component.SquareImageView
            android:id="@+id/main_redo_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/ic_redo_white_24dp"
            android:padding="@dimen/button_padding"
            android:clickable="true"
            android:background="?attr/selectableItemBackgroundBorderless"/>




    </LinearLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>
</LinearLayout>
